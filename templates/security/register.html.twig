{# templates/security/register.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1>Inscription</h1>

    {% for flashMessage in app.flashes('success') %}
        <div class="alert alert-success">{{ flashMessage }}</div>
    {% endfor %}

    {{ form_start(registrationForm) }}
        <div class="mb-3">
            {{ form_label(registrationForm.nom, 'Nom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.nom) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.prenom, 'Prénom', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.prenom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.prenom) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.role, 'Rôle', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.role, {'attr': {'class': 'form-select'}}) }}
            {{ form_errors(registrationForm.role) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.motDePasse.first, 'Mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.motDePasse.first, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.motDePasse.first) }}
        </div>

        <div class="mb-3">
            {{ form_label(registrationForm.motDePasse.second, 'Confirmez le mot de passe', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(registrationForm.motDePasse.second, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(registrationForm.motDePasse.second) }}
        </div>

        <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}

    <p class="mt-3">
        <a href="{{ path('app_login') }}">Déjà un compte ? Se connecter</a>
    </p>
</div>
{% endblock %}