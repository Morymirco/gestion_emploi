            <!-- LÃ©gende -->
            <div class="card mb-4">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle"></i> LÃ©gende</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <span class="badge bg-primary me-2">â– </span> SÃ©ance de Cours
                        </div>
                        <div class="col-md-4">
                            <span class="badge bg-warning me-2">â– </span> Pause
                        </div>
                        <div class="col-md-4">
