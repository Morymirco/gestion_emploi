    // Ajout de la fonctionnalit√© de clic sur les cours
    document.querySelectorAll('.cours-item').forEach(function(item) {
        item.addEventListener('click', function() {
            // Ici on pourrait ajouter une modal avec plus de d√©tails
            console.log('Cours cliqu√©:', this.textContent);
        });
    });
});
</script>
{% endblock %} 