{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Accueil - UGANC{% endblock %}

{% block body %}
<div class="container mt-5 text-center">
    <h1>Bienvenue sur UGANC - Gestion des Emplois du Temps</h1>
    <p class="lead">Organisez vos cours et consultez vos emplois du temps facilement.</p>

    {% if app.user %}
        <p>Vous êtes connecté en tant que {{ app.user.email }}.</p>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-primary mt-3">Tableau de bord Admin</a>
        {% elseif is_granted('ROLE_ENSEIGNANT') %}
            <a href="{{ path('app_enseignant_dashboard') }}" class="btn btn-primary mt-3">Tableau de bord Enseignant</a>
        {% elseif is_granted('ROLE_ETUDIANT') %}
            <a href="{{ path('app_etudiant_dashboard') }}" class="btn btn-primary mt-3">Tableau de bord Étudiant</a>
        {% endif %}
    {% else %}
        <div class="mt-4">
            <a href="{{ path('app_login') }}" class="btn btn-success me-2">Se connecter</a>
            <a href="{{ path('app_register') }}" class="btn btn-primary">S'inscrire</a>
        </div>
    {% endif %}

    <div class="mt-5">
        <p>UGANC - © {{ 'now'|date('Y') }} - Gestion des emplois du temps pour tous.</p>
    </div>
</div>
{% endblock %}